@model MVC.Models.Workbook
@{
    ViewBag.Title = "WM Api Info";
    string url = "http://localhost:50839";

    var obj = new { workbook = "Account Workbook", api = new[] { 601, 242 }  };
    var dynaList = new
    {
        Workbooks = Model.Workbooks.Select(a => new System.Web.Mvc.SelectListItem { Text = a, Value=a} )
    };
  }

<div class="jumbotron">

    <div class="dropdown">
        <label for="workbooks">Select workbook (select one):</label>
        <select class="form-control" id="workbooks">
            @foreach (string wb in Model.Workbooks)
            {
                <option style="font-family:Tahoma">@wb</option>
            }
        </select>
    </div>

    <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
            Select Workbook..
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            @foreach (string wb in Model.Workbooks)
            {
                <li><a href='@string.Format(@"{0}/home/details/{1}", url, wb)'>@wb</a></li>
            }
        </ul>
    </div>
</div>
<script type="text/javascript">
    function getDetails() {
        alert("Hello");
        this.submit()
    }
</script>
@using (Html.BeginForm("apiinfo","Home", obj))
{
    <div id="details">
        <h2>Details</h2>
        @Html.DropDownList( "worbook", dynaList, new { @class="dropdown form-control"} )
        <input type="text" value="Account Workbook" id="workbook" />
        @Html.TextBox("apis")
        @*<input type="text" value="601" id="api" />*@
        <input type="submit"  class="btn btn-info" value="Fetch Details"/>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <h2>API Details</h2>
        <p>
            ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
            enables a clean separation of concerns and gives you full control over markup
            for enjoyable, agile development.
        </p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
    </div>
</div>